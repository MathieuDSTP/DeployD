<script type="text/template" id="agent-row-template">
	<li>
        <%=hostname%> (<%=tags%>) <a class="unregister-agent" href="javascript:void(0);">unregister</a>
        <%if (packages.length==0) {%>
            No packages
        <%} else {%>
            <ul>
            <%_.each(packages, function(package) {%>
                <%=_.template($('#package-cell-template').html(), package)%>
            <%});%>
            </ul>
        <%}%>
    </li>
</script>

<script type="text/template" id="package-cell-template">
    <li>
    <%=packageId%> (<%=installedVersion%>)
    </li>
</script>

