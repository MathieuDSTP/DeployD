                             "just-ln1-web03.justgiving.com",
                             "just-ln1-web04.justgiving.com",
                             "just-ln1-web05.justgiving.com",
                             "just-ln1-web06.justgiving.com",
                             "just-ln1-web07.justgiving.com",
                             "just-ln1-web08.justgiving.com",
                             "just-ln1-web09.justgiving.com",
                             "just-ln1-web012.justgiving.com",
                         };
    }
    
    @foreach (var agent in agents)
    {
        <input type="checkbox" name="hostname" id="@agent" value="true"/>
        <label for="@agent">@agent</label>
        <br/>
    }
    
    <input type="submit" value="Deploy"/>&nbsp;<a href="#" class="cancel">Cancel</a>
</fieldset>
