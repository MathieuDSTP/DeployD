    <script src="/Scripts/Views/home.js" type="text/javascript"></script>
}

<h2>Hub</h2>


<Table width="100%" id="grid">
    
</Table>
<fieldset id="deployDialog">
    <legend>Deploy</legend>
    <form id="startInstallationForm" action="/api/installation/start" method="POST">
    Package: <select id="packageIdSelect" name="packageId">
                
             </select>
    Version: <select id="versionSelect" name="version">
                
             </select><br/>
    Agents:<br/>
        <div id="agentList"></div>
    
        <input type="submit" value="Deploy"/>&nbsp;<a href="#" class="cancel">Cancel</a>
    </form>
</fieldset>

<fieldset>
    <legend>Register Agent</legend>
    <form id="registerAgentForm" action="/api/agent/register" method="post">
        <label for="hostname"><input type="text" name="hostname"/></label>
        <input type="submit" value="Register"/>
    </form>
</fieldset>