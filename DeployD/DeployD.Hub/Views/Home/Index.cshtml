                 <option>GG.Api.Services</option>
                 <option>GG.Search.Indexing.Service</option>
                 <option>GG.PaymentProcessing.Agent</option>
             </select>
    Version: <select id="versionSelect" name="version">
                 <option>1.0.0.3</option>
                 <option>1.0.0.2</option>
                 <option>1.0.0.1</option>
                 <option>1.0.0.0</option>
             </select><br/>
    Agents:<br/>
    @{
        var agents = new[]
                         {
                             "just-ln1-stg01.justgiving.com",
                             "just-ln1-stg02.justgiving.com",
                             "just-ln1-stg03.justgiving.com",
                             "just-ln1-stg04.justgiving.com",
                             "just-ln1-web01.justgiving.com",
